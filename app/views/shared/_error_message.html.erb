<%= turbo_frame_tag 'error_message' do %>
  <div data-controller="error-message">
    <div data-error-message-target="msg" class="error__message">
      <div class="px-2">
        <%= message %>
      </div>
      <%= link_to close_btn, '', data: {
        action: 'error-message#close_error_message'
      }, class: 'px-3' %>
    </div>
  </div>
<% end %>
